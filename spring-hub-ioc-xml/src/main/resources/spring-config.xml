<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="user" class="org.example.User"/>

    <bean id="zhangsan" class="org.example.User">
        <property name="username" value="张三"/>
        <property name="age" value="18"/>
    </bean>

    <!-- scope: 定义Bean的作用范围 -->
    <!-- 1. singleton as default -->
    <!-- 2. prototype -->
    <bean id="bookDao" class="org.example.dao.impl.BookDaoImpl" scope="prototype"/>

    <bean id="bookService" class="org.example.service.impl.BookServiceImpl">
        <property name="bookDao" ref="bookDao"/>
    </bean>


    <!-- 方式一、构造方法实例化bean -->
    <!-- <bean id="bookDao" class="org.example.dao.impl.BookDaoImpl"/> -->

    <!-- 方式二、使用静态工厂实例化bean-->
    <bean id="orderDao" class="org.example.factory.OrderDaoFactory" factory-method="getOrderDao"/>

    <!-- 方式三、使用实例工厂实例化bean -->
    <bean id="userDaoFactory" class="org.example.factory.UserDaoFactory"/>
    <bean id="userDao" factory-bean="userDaoFactory" factory-method="createUserDao"/>

    <!-- 方式四、使用FactoryBean实例化bean-->
    <bean id="userDaoFactoryBean" class="org.example.factory.UserFactoryBean"/>
</beans>